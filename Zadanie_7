#include <iostream>
#include <math.h>
using namespace std;

int main()
{
	setlocale(0, "rus");
	double ygol, pi,rad;
	cout << "Введите значение угла: ";
	cin >> ygol;
	rad = ygol / 180;
	cout << rad << " pi радиан";
	return 0;
}

2)
#include <iostream>
#include <math.h>
using namespace std;

int main()
{
	setlocale(0, "rus");
	double rad, pi,ygol;
	cout << "Введите значение угла в радианах: ";
	cin >> rad;
	ygol = rad * 180 ;
	cout << ygol << " градусов";
	return 0;
}

3)
#include <iostream>
#include <math.h>
using namespace std;

int main()
{
	setlocale(0, "rus");
	double X,A,Y,kg,price;
	cout << "Сколько кг Вы преобрели? \n";
	cout << "\t";
	cin >> X;
	cout << "По какой цене(в рублях)? \n";
	cout << "\t";
	cin >> A;
	kg = A / X;
	cout << "1 кг стоит: "<< kg<<" руб.\n";
	cout << "Сколько ещё кг Вам понадобится?";
	cout << "\t";
	cin >> Y;
	price = Y * kg;
	cout << "С Вас потребуют " << price<<" руб.";
	return 0;
}

