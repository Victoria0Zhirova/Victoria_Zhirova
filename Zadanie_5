#include <iostream>
using namespace std;

int main()
{
	setlocale(0, "rus");
	double a=0,b=0,c=0, ac=0,bc=0;
	cout << "Введите координаты точек:\n";
	cout << "\ta = ";
	cin >> a;
	cout << "\tb = ";
	cin >> b;
	cout << "\tc = ";
	cin >> c;
	if (a > b)
	{
		if (c > a or c < b)
		{
			cout << "Введите данные, удовлетворяющие условию: точка с лежит между а и b ";
		}
		else
		{
			if (a > c)
			{
				if (a >= 0)
				{
					if (c >= 0)
					{
						ac = a - c;
					}
					else
					{
						ac = abs(c) + a;
					}
				}
				else
				{
					ac = abs(c) - abs(a);
				}
			}
			else
			{
				if (c >= 0)
				{
					if (a >= 0)
					{
						ac = c - a;
					}
					else
					{
						ac = abs(a) + c;
					}
				}
				else
				{
					ac = abs(a) - abs(c);
				}
			}
			if (b > c)
			{
				if (b >= 0)
				{
					if (c >= 0)
					{
						bc = b - c;
					}
					else
					{
						bc = abs(c) + b;
					}
				}
				else
				{
					bc = abs(c) - abs(b);
				}
