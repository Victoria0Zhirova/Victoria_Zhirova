1)
#include <iostream>
#include <iostream>
using namespace std;

int main()
{
	setlocale(0, "rus");
	double x1 = 0, x2 = 0, y1 = 0, y2 = 0, katetx = 0, katety = 0, rast = 0;
	cout << "Введите координаты точек:\n";
	cout << "x1 =  \t";
	cin >> x1;
	cout << "y1 =  \t";
	cin >> y1;
	cout << "x2 =  \t";
	cin >> x2;
	cout << "y2 =  \t";
	cin >> y2;
	if (x1 > x2 and x1>=0)
	{
		if (x2>0)
		{
			katetx = x1 - x2;
		}
		else
		{
			katetx = x1 + abs(x2);
		}

	}
	else
	{
		if (x1 < 0 and x1>x2)
		{
			katetx = abs(x2) - abs(x1);
		}
		if (x1 < 0 and x1<x2)
		{
			katetx = abs(x2) - abs(x1);
		}
	}
	katety = abs(y1) + abs(y2);
	rast = sqrt(pow(katetx, 2) + pow(katety, 2));
	cout << "Расстояние : " << rast;
	return 0;
}

