#include <iostream>
using namespace std;

int main()
{
	setlocale(0, "rus");
	double x1 = 0, x2 = 0, y1 = 0, y2 = 0, katetx = 0, katety = 0, rast = 0;
	cout << "Введите координаты точек:\n";
	cout << "\tx1 = ";
	cin >> x1;
	cout << "\ty1 = ";
	cin >> y1;
	cout << "\tx2 = ";
	cin >> x2;
	cout << "\ty2 = ";
	cin >> y2;
	if (x1 > x2)
	{
		if (x1 >= 0)
		{
			if (x2 >= 0)
			{
				katetx = x1 - x2;
			}
			else
			{
				katetx = x1 + abs(x2);
			}

		}
		else
		{
			katetx = abs(x1) - abs(x2);
		}
	
	}
	else
	{
		if (x2 >= 0)
		{
			if (x1 >= 0)
			{
				katetx = x2 - x1;
			}
			else
			{
				katetx = x2 + abs(x1);
			}

		}
		else
		{
			katetx = abs(x2) - abs(x1);
		}
	}
	if (y1 > y2)
	{
		if (y1 >= 0)
		{
			if (y2 >= 0)
			{
				katety = y1 - y2;
			}
			else
			{
				katety = y1 + abs(y2);
			}
		}
		else
		{
			katety = abs(y1) - abs(y2);
		}
	}
	else
	{
		if (y2 >= 0)
		{
			if (y1 >= 0)
			{
				katety = y2 - y1;
			}
			else
			{
				katety = y2 + abs(y1);
			}

		}
		else
		{
			katety = abs(y2) - abs(y1);
		}
	}
	rast = sqrt(pow(katetx, 2) + pow(katety, 2));
	cout << "Расстояние : " << rast;
	return 0;
}

2)
#include <iostream>
using namespace std;

int main()
{
	setlocale(0, "rus");
	double a=0,b=0,c=0, ac=0,bc=0;
	cout << "Введите координаты точек:\n";
	cout << "\ta = ";
	cin >> a;
	cout << "\tb = ";
	cin >> b;
	cout << "\tc = ";
	cin >> c;
	if (a > c)
	{
		if (a >= 0)
		{
			if (c >= 0)
			{
				ac = a - c;
			}
			else
			{
				ac = abs(c) + a;
			}
		}
		else
		{
			ac = abs(c) - abs(a);
		}
	}
	else
	{
		if (c >= 0)
		{
			if (a >= 0)
			{
				ac = c - a;
			}
			else
			{
				ac = abs(a) + c;
			}
		}
		else
		{
			ac = abs(a) - abs(c);
		}
	}
	if (b > c)
	{
		if (b >= 0)
		{
			if (c >= 0)
			{
				bc = b- c;
			}
			else
			{
				bc = abs(c) + b;
			}
		}
		else
		{
			bc = abs(c) - abs(b);
		}
	}
	else
	{
		if (c >= 0)
		{
			if (b >= 0)
			{
				bc = c - b;
			}
			else
			{
				bc = abs(b) + c;
			}
		}
		else
		{
			bc = abs(b) - abs(c);
		}
	}
	cout << "Длина отрезка ас: " << ac << "\n";
	cout << "Длина отрезка bс: " << bc << "\n";
	cout << "Сумма : ac + bc = " << ac + bc;
	return 0;
}

